<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding">

    <!--氏名テキスト-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result_txv_name"
        android:text="ここに氏名が表示されます"
        android:layout_marginTop="@dimen/name_marginTop"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="生年月日を表示"
        android:id="@+id/result_txv_birth"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
    <!--占い結果テキスト-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result_txv_divine"
        android:text="ここに占い結果が表示されます。"
        android:layout_marginTop="@dimen/name_marginTop"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result_txv_divine2"
        android:text="ここにラッキーアイテムが表示されます。"
        android:layout_marginTop="@dimen/name_marginTop"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="戻る"
        android:id="@+id/result_btn_back"
        android:layout_marginTop="@dimen/name_marginTop"/>


    </LinearLayout>
</LinearLayout>